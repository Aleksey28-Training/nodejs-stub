  "main": "lib/src/server/index.js",
  "type": "commonjs",
  "files": [
    "lib",
    "test"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build:client": "tsc -p ./tsconfig.client.json",
    "build:server": "tsc -p ./tsconfig.server.json",
    "build:all": "tsc -p .",
    "build": "npm run build:all && npm run build:client && npm run build:server",
    "start": "node lib/src/server/index.js",
    "lint": "eslint src test",
    "test": "npm run lint && mocha lib/test/**/*-test.js",
    "watch": "npm test -- -w",
    "tctest": "testcafe chrome test/functional-test.ts"
  },
